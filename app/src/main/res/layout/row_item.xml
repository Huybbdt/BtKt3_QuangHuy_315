<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroud_item"
        android:orientation="vertical"
        android:layout_gravity="center"
       >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:src="@drawable/uudai1" />

        <TextView
            android:id="@+id/tvName"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Text"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/bt_chitiet"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:hint="Chi tiết"
            android:layout_gravity="center"
            android:textColorHint="#FF9800"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/dangnhap"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroud_item"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:src="@drawable/uudai1" />

        <TextView
            android:id="@+id/tvName2"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Text"
            android:textColor="#000"
            android:layout_margin="5dp"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/bt_chitiet2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:hint="Chi tiết"
            android:textColorHint="#FF9800"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:background="@drawable/dangnhap"
            />
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BNV"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:itemHorizontalTranslationEnabled="true"
        android:background="@drawable/menu_bottom_navigation_view"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_navigation_view"
        app:itemTextAppearanceActive="@style/Bottom_Navigation_View"/>
</LinearLayout>